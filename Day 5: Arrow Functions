function modifyArray(nums) {
    return nums.map(n=> n = (n%2==0) ? n*2 : n*3);
}

OR


function modifyArray(nums) {           
     var s=function(i){
                if (i%2==0)
                    return i*2
                else 
                    return i*3
    } 
    var ans = nums.map(s)
    return ans;
}
